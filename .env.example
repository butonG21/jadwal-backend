# Server Configuration
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/jadwal-backend

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# External Services
ATTENDANCE_API_URL=https://your-attendance-api.com

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Cron Job Configuration
# Attendance fetch schedule (cron format)
# Default: '0 8 * * 1-5' = 8 AM on weekdays (Monday to Friday)
# Examples:
# - '0 8 * * *' = Every day at 8 AM
# - '0 8,17 * * 1-5' = 8 AM and 5 PM on weekdays
# - '*/30 * * * *' = Every 30 minutes
ATTENDANCE_CRON_SCHEDULE=0 8 * * 1-5

# Timezone for cron jobs
ATTENDANCE_CRON_TIMEZONE=Asia/Jakarta

# Enable/disable attendance cron job
# Set to 'false' to disable, any other value or empty = enabled
ATTENDANCE_CRON_ENABLED=true

# Cron Job Authentication
# Credentials for cronjob to authenticate with the API
CRON_AUTH_USERNAME=2405047
CRON_AUTH_PASSWORD=@qwerty12345

# Deployment Configuration
# Project path on VPS (for webhook deployment)
# Default: $HOME/shiftly/jadwal-backend
PROJECT_PATH=/home/username/shiftly/jadwal-backend

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Railway Configuration (for deployment)
# These will be automatically set by Railway
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=jadwal-backend
# RAILWAY_PROJECT_NAME=your-project-name